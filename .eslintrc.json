{
  "extends": [
    "react-app",
    "airbnb",
    "airbnb/hooks",
    "airbnb-typescript"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "semi": "off",
    "@typescript-eslint/semi": ["error", "never"],
    "react/jsx-filename-extension": [1, {
      "extensions": [".jsx", ".tsx"]
    }],
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
    "func-names": ["error", "as-needed"]
  }
}